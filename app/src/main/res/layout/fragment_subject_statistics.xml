<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statistics_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/statistics_name_percent_correct"
                android:padding="5dp" />
            <TextView
                android:id="@+id/statistics_value_percent_correct"
                android:layout_column="1"
                android:padding="5dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/statistics_name_questions_correct"
                android:padding="5dp" />
            <TextView
                android:id="@+id/statistics_value_questions_correct"
                android:layout_column="1"
                android:padding="5dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>